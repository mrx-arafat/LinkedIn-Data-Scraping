{
  "name": "linkedin-scraper",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "test": "playwright test",
    "scrape:connections": "playwright test tests/scrapers/connections.spec.ts --project=scrape",
    "scrape:connections-via-pagination": "playwright test tests/scrapers/search-filters-pagination.spec.ts --project=scrape --timeout=900000",
    "scrape:posts": "playwright test tests/scrapers/post-scraping.spec.ts --project=scrape --timeout=900000",
    "codegen": "playwright codegen --save-storage=playwright/.auth/linkedin.json",
    "lint": "echo \"No linter configured\""
  },
  "devDependencies": {
    "@playwright/test": "^1.45.0",
    "dotenv": "^16.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.0"
  }
}
